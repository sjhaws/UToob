<div class="ui form">
<%= form_for [@user, @playlist] do |f| %>
  <div class="field">
  <%= f.label :name%>
  <%= f.text_field :name, required: true, autofocus: true %>
  </div>
  <div class="field">
  <%= f.label :description%>
  <%= f.text_area :description, required: true %>
  </div>
  <%= f.submit%>
<%end%>
</div>