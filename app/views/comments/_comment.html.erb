<div class="comment">

  <div class="content">
    <div class="author"><%= User.find(comment.user_id).username %></div>
    <div class="text"><%= comment.body %></div>
    <div class="actions">
      <% if user_signed_in? and comment.user_id == current_user.id %>
        <%= link_to '<i class="edit icon"></i>'.html_safe, edit_movie_comment_path(comment.movie_id, comment.id) %>
        <%= link_to '<i class="trash alternate outline icon"></i>'.html_safe, movie_comment_path(comment.movie_id, comment.id), method: :delete %>
      <%end%>
    </div>
  </div>
</div>
