<%= form_for @movie do |f| :html => {:class => "ui form"} %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :trailer %>
    <%= f.text_field :trailer, required: true %>
  </div>
  <div class="field">
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <%= f.submit %>
<% end %>
